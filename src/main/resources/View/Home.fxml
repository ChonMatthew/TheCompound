<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<AnchorPane stylesheets="@Stylesheet.css" prefHeight="700.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Game.Controller.HomeController">
    <styleClass>
        <String fx:value="background-home" />
    </styleClass>
    <children>
      <VBox alignment="CENTER" layoutY="200.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
             <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handlePlay" prefHeight="75.0" prefWidth="400.0" text="Play">
                 <cursor>
                     <Cursor fx:constant="HAND" />
                 </cursor>
                 <styleClass>
                     <String fx:value="custom-button" />
                 </styleClass>
             </Button>
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleHelp" prefHeight="75.0" prefWidth="400.0" text="How To Play">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
                <styleClass>
                    <String fx:value="custom-button" />
                </styleClass>
            </Button>
             <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleExit" prefHeight="75.0" prefWidth="400.0" text="Exit">
                 <cursor>
                     <Cursor fx:constant="HAND" />
                 </cursor>
                 <styleClass>
                     <String fx:value="custom-button" />
                 </styleClass>
             </Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="98.0" layoutY="100.0" prefHeight="300.0" prefWidth="400.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <ImageView fitHeight="300.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../Assets/Background/homeTitle.png" />
                  </image>
              </ImageView>
         </children>
      </VBox>
    </children>
</AnchorPane>
